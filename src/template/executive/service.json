{
  "openapi": "3.0.2",
  "info": {
    "version": "0.1",
    "title": "Executive Object Example",
    "description": "An example object demonstrating the capability of calling other objects"
  },
  "servers": [
    {
      "url": "/hello/world/v0.1/",
      "description": "Executive Object Example"
    }
  ],
  "paths": {
    "/process": {
      "post": {
        "description": "executive object",
        "operationId": "process",
        "requestBody": {
          "description": "inputs",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/input"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/output"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://demo.kgrid.org/schemas/basicerror.yaml"
                }
              }
            }
          }
        },
        "x-kgrid-activation": {
          "artifact": "src/index.js",
          "adapter": "JAVASCRIPT",
          "entry": "process"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "input": {
        "required": [
          "names"
        ],
        "properties": {
          "names": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["Sponge", "Bob", "the Builder"]
          }
        }
      },
      "output": {
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "object"
          }
        }
      }
    }
  }
}
