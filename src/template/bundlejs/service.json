{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "SCORE risk calculation",
    "description": "SCORE risk calculation"
  },
  "servers": [
    {
      "url": "/score/calc/1.0.0",
      "description": "SCORE risk calculation."
    }
  ],
  "paths": {
    "/score": {
      "post": {
        "description": "SCORE risk calculation.",
        "operationId": "cvdriskscore",
        "requestBody": {
          "description": "inputs",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/input"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/output"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://demo.kgrid.org/schemas/basicerror.yaml"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "input": {
        "required": [
          "age",
          "gender",
          "risk",
          "sbp",
          "cholesterol",
          "smoker"
        ],
        "properties": {
          "age": {
            "type": "number",
            "example": 48
          },
          "gender": {
            "type": "string",
            "enum": [
              "Male",
              "Female"
            ],
            "example": "Female"
          },
          "risk": {
            "type": "string",
            "enum": [
              "high",
              "low"
            ],
            "example": "low"
          },
          "sbp": {
            "type": "number",
            "example": 120
          },
          "cholesterol": {
            "type": "number",
            "example": 8
          },
          "smoker": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "output": {
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "object"
          }
        }
      }
    }
  }
}
